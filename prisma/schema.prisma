generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model employee {
  id         Int        @id @default(autoincrement())
  email      String     @unique
  name       String?
  department department @relation(fields: [deptId], references: [id])
  deptId     Int
}

model department {
  id       Int        @id @default(autoincrement())
  name     String     @unique
  employee employee[]
}
